{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Grafana Azure Device Update",
  "id": "grafana-azure-device-update",
  "info": {
    "keywords": ["app"],
    "description": "Plugin for azure device update",
    "author": {
      "name": "Liya design"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "page",
      "name": "Default",
      "path": "/a/%PLUGIN_ID%",
      "role": "Admin",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "dashboard",
      "name": "Example dashboard 1",
      "path": "dashboards/example-dashboard1.json",
      "role": "Admin",
      "addToNav": true,
      "uid": "Av57mRHVz"
    },
    {
      "type": "datasource",
      "name": "Azure Device Update for IoT Hub"
    }
  ],
  "routes": [
    {
      "path": "list-updates",
      "url": "https://pomelo-adu.api.adu.microsoft.com/deviceUpdate/id/updates?api-version=2022-10-01",
      "tokenAuth": {
        "url": "https://api.example.com/v1/oauth/token",
        "params": {
          "grant_type": "client_credentials",
          "client_id": "{{ .SecureJsonData.clientId }}",
          "client_secret": "{{ .SecureJsonData.clientSecret }}"
        }
      }
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=9.2.5",
    "plugins": []
  }
}
