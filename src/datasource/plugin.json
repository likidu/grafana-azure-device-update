{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Azure Device Update for IoT Hub",
  "id": "azure-device-update-datasource",
  "metrics": true,
  "routes": [
    {
      "path": "list-devices",
      "url": "https://{{ .JsonData.endpoint }}/deviceUpdate/{{ .JsonData.instanceName }}/updates?api-version=2022-10-01",
      "headers": [{ "name": "Authorization", "content": "Bearer {{ .SecureJsonData.apiToken }}" }]
    },
    {
      "path": "list-updates",
      "url": "https://{{ .JsonData.endpoint }}/deviceUpdate/{{ .JsonData.instanceName }}/management/devices?api-version=2022-10-01",
      "headers": [{ "name": "Authorization", "content": "Bearer {{ .SecureJsonData.apiToken }}" }]
    }
  ],
  "info": {
    "description": "",
    "author": {
      "name": "Liya Du",
      "url": "https://liya.design"
    },
    "keywords": ["azure"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      {
        "name": "Website",
        "url": "https://github.com/grafana/grafana-plugin-examples"
      },
      {
        "name": "License",
        "url": "https://github.com/grafana/grafana-plugin-examples/blob/master/LICENSE"
      }
    ],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=9.1.2",
    "plugins": []
  }
}
